alias pm="sudo pacman"
alias cd..="cd .."
alias nano="nano -c"
alias calc="bc -l"
alias root="sudo -i"
alias mkdir="mkdir -vp"
alias mount "mount | column -t"
alias ping="ping -c 5 -i 0.2"
alias fucking="sudo"
alias reboot="sudo reboot now"
alias shutdown="shutdown now"
